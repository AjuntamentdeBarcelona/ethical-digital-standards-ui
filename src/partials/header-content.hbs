{{#if page.attributes.debug}}
  <div class="debug-row">
    <div id="debug-left" class="debug-column"></div>
    <div id="debug-right" class="debug-column"></div>
  </div>
  <div id="dest"></div>
  <script type="text/javascript" src="{{uiRootPath}}/js/vendor/renderjson.js"></script>
  <script>
   document.getElementById("debug-left").appendChild(
     renderjson.set_show_to_level(1).set_max_string_length(80)({{{stringify page}}})
   )
   document.getElementById("debug-right").appendChild(
     renderjson.set_show_to_level(1).set_max_string_length(80)({{{stringify site}}})
   )
  </script>
{{/if}}
